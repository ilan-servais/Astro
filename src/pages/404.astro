---
import Layout from '@layouts/Layout.astro';
---

<Layout title="Page Not Found | Ilan Servais">
  <main class="flex flex-col items-center justify-center h-screen text-center px-4">
    <h1 class="text-4xl md:text-5xl text-orange font-monospace mb-6">404</h1>
    <h2 class="text-2xl md:text-3xl text-black dark:text-white font-monospace mb-6">Page Not Found</h2>
    <p class="text-black dark:text-white mb-8">The page you are looking for doesn't exist or has been moved.</p>
    <a 
      href="/" 
      class="px-6 py-3 bg-black text-white hover:bg-orange border-2 border-transparent transition rounded-xl focus:outline-none"
    >
      Return Home
    </a>
  </main>
</Layout>
