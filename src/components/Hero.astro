---
import heroImage from '@assets/images/hero.svg';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hi! My name is <span class="text-orange">Ilan</span> and I am a web developer based in Marseille.
			</h1>
		</div>
		<div class="mb-10">
			<a href="/career#1" aria-label="View my professional career path">
				<Button style={'primary'} size={'lg'} class={'flex'} name="explore career">Navigate through my career story</Button>
			</a>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="Coding boy"
			width={600}
			height={600}
			loading="eager"
		/>
	</div>
</section>
